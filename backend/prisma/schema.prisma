datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  Task Task[]
}

model Task {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  author      User   @relation(references: [id], fields: [id_owner])
  id_owner    String @db.ObjectId
}

