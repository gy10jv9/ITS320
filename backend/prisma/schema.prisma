datasource db {
	provider = "mongodb"
	url      = env("DATABASE_URL")
}

generator client {
	provider = "prisma-client-js"
}

model Task {
    id				String		@id @default(auto()) @map("_id") @db.ObjectId
    description		String		
}

model Owner {
	id		String		@id @default(auto()) @map("_id") @db.ObjectId
	name	String
}

